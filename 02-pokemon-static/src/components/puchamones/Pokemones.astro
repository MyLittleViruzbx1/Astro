---
interface Props {
    name: string;
    url: string; 
    isBig?:boolean;       
}


const {name, url, isBig=false} = Astro.props;
const id = url.split('/').at(-2);

const imgUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${ id }.png`


---
<!-- class={`rounded flex flex-col justify-center items-center p-2 ${!isBig && 'border'}`}> -->

<!-- href={`/pokemon/${id}`} -->
<a
href={`/puchamones/${name}`}
class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
        border: !isBig
    },
]}>

    <img
    transition:name={`${name}-image`}
    src={imgUrl} alt={name}>

    <span class="capitalize text-sm"> #{id} {name}</span>

