---
import PuchamonCard from "../components/puchamones/puchamonCard.astro";
import type { PokemonListResponse } from "../interfaces/pokemon-list";

import MainLayout from "../layouts/MainLayout.astro";

const resp = await fetch("https://pokeapi.co/api/v2/pokemon");
const data = (await resp.json()) as PokemonListResponse;
console.log("~data", data);
---

<MainLayout title="Pokemon static">
  <h1 class="text-center text-3xl">Listado de Puchamones</h1>
  <hr />
  <section
    aria-label="Listado de Puchamones"
    class="grid grid-cols-1 sm:grid-cols-4 md:grid-cols-5 gap-4 mt-5"
  >
    {data.results.map(({name,url}) => (
    <PuchamonCard 
    name={name}, url={url} />
    ))}
  </section>
</MainLayout>
